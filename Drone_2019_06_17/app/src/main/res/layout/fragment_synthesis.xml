<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".view.SynthesisFragment">

    <TableLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/button_set_flight_plan_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:backgroundTint="@color/colorWidget"
            android:text="Set data to flight plan"
            android:textColor="@color/colorFont" />

        <Button
            android:id="@+id/button_refresh_image_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:backgroundTint="@color/colorWidget"
            android:text="Refresh image list"
            android:textColor="@color/colorFont" />

        <Button
            android:id="@+id/button_delete_drone_file_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:backgroundTint="@color/colorWidget"
            android:text="Delete drone file list"
            android:textColor="@color/colorFont" />

        <Button
            android:id="@+id/button_delete_final_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:backgroundTint="@color/colorWidget"
            android:text="Delete final image"
            android:textColor="@color/colorFont" />

        <Button
            android:id="@+id/button_delete_image_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:backgroundTint="@color/colorWidget"
            android:text="Delete image list"
            android:textColor="@color/colorFont" />

        <Button
            android:id="@+id/button_send_image_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:backgroundTint="@color/colorWidget"
            android:text="@string/action_send_images"
            android:textColor="@color/colorFont" />

        <Button
            android:id="@+id/button_start_synthesis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:backgroundTint="@color/colorWidget"
            android:text="@string/action_start_synthesis"
            android:textColor="@color/colorFont" />

    </TableLayout>

</android.support.constraint.ConstraintLayout>